<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lepu.anxin">

    <uses-permission android:name="android.permission.CAMERA" /> <!-- <uses-permission android:name="android.permission.FLASHLIGHT" /> -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name="com.lepu.anxin.MyBleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_anxin"
        android:label="@string/app_name_anxin"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.NordicBle"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name="com.lepu.anxin.activity.AgreementReadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lepu.anxin.activity.AgreementActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lepu.anxin.activity.KcaConfigActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lepu.anxin.activity.PermissionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lepu.anxin.activity.InfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lepu.anxin.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lepu.anxin.activity.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lepu.anxin.activity.BindActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lepu.anxin.activity.SettingAboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lepu.anxin.activity.MainActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="com.lepu.anxin.ble.BleService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>